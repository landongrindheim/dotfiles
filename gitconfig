[user]
  name = Landon Grindheim
[alias]
  track = add -N
  uncommit = reset --soft HEAD^
  unstage = reset
  staged = diff --cached
  ctags = "!.git/hooks/ctags"
  git = !exec git
  g = !exec git
[color]
  diff = auto
  status = auto
  branch = auto
[commit]
  verbose = true
[core]
  excludesfile = ~/.gitignore
  editor = vim --noplugin
[apply]
  whitespace = nowarn
[merge]
  conflictstyle = diff3
  ff = only
[fetch]
  prune = true
[init]
  defaultBranch = main
  templatedir = "~/.git_template"
[include]
  path = .gitconfig-home
[includeIf "gitdir:~/dev/"]
  path = .gitconfig-work
